<div id="notify" style="position: fixed; top:100px; left: 10px; height:100%; width:350px;">
    <div class="toast" role="alert" v-for="a in alerts">
        <div class="toast-header">
            <img src="/static/img/icons/bell.svg" class="rounded mr-2">
            <strong class="mr-auto">{{a.alert_name}} ({{a.alert}})</strong>
            <small class="text-muted">{{moment(a.date).fromNow()}}</small>
            <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" v-on:click="dismissAlert(a.id)">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>

        <div class="toast-body">
            <p class="m-0">
                <strong>Device: </strong><a href="#" v-on:click="openDevice(a.device)">{{a.device_label || a.device}}</a>
            </p>
            <p v-if="a.node" class="m-0">
                <strong>Node: </strong>{{a.node_name}}
            </p>
        </div>
    </div>
</div>

<script src="/static/js/app/notify.js"></script>